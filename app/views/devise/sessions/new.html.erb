<div class="peers ai-s fxw-nw h-100vh">
  <div class="d-n@sm- peer peer-greed h-100 pos-r bgr-n bgpX-c bgpY-c bgsz-cv" style="background-image: url('<%= asset_path('bg.jpg')%>')">
    <div class="pos-a centerXY">
      <div class="bgc-white bdrs-50p pos-r" style='width: 120px; height: 120px;'>
        <%= image_pack_tag('logo-d.png', class: "w-100 pos-a centerXY") %>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-4 peer pX-40 pY-80 h-100 bgc-white scrollable pos-r" style='min-width: 320px;'>
    <h4 class="fw-300 c-grey-900 mB-40">Login</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>

      <div class="form-group">
        <%= form.label :email, class: 'text-normal text-dark' %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email id" %>
      </div>
      <div class="form-group">
        <%= form.label :password, class: 'text-normal text-dark' %>
        <%= form.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
      </div>

      <div class="form-group">
        <div class="peers ai-c jc-sb fxw-nw">
          <% if devise_mapping.rememberable? %>
            <div class="peer">
              <div class="checkbox checkbox-circle checkbox-info peers ai-c">
                <%= form.check_box :remember_me, id: "inputCall1", class: "peer" %>
                <label for="inputCall1" class="peers peer-greed js-sb ai-c">
                  <span class="peer peer-greed">Remember Me</span>
                </label>
              </div>
            </div>
          <% end %>
          <div class="peer">
            <%= form.submit "Log in", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

